{
	"name": "async-plugin-nunjucks",
	"version": "0.9.0",
	"description": "Async context properties for the nunjucks template engine",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		}
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"files": [
		"dist/"
	],
	"scripts": {
		"build": "npm run build:esm && npm run build:cjs && npm run build:types",
		"build:esm": "esbuild src/index.ts --bundle --outfile=dist/esm/index.js --platform=node --format=esm --sourcemap --external:events --external:fs --external:path",
		"build:cjs": "esbuild src/index.ts --bundle --outfile=dist/cjs/index.js --platform=node --format=cjs --sourcemap --external:events --external:fs --external:path",
		"build:types": "tsc --emitDeclarationOnly --outDir dist/esm",
		"build:tests": "tsc -p tests/tsconfig.json",
		"prepublishOnly": "npm run build",
		"lint": "eslint .",
		"pretest": "npm run build",
		"test": "npm run build:tests && node --experimental-vm-modules node_modules/mocha/bin/mocha.js out/tests/**/*.js",
		"test:cjs": "npm run build:tests && node --require=source-map-support/register node_modules/mocha/bin/mocha.js --require dist/cjs/index.js out/tests/**/*.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/geleto/async-plugin-nunjucks.git"
	},
	"keywords": [
		"nunjucks",
		"plugin",
		"async",
		"properties",
		"variables",
		"context"
	],
	"author": "Angel Popov",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/geleto/async-plugin-nunjucks/issues"
	},
	"homepage": "https://github.com/geleto/async-plugin-nunjucks#readme",
	"devDependencies": {
		"@types/chai": "^4.3.17",
		"@types/mocha": "^10.0.7",
		"@types/node": "^22.4.1",
		"@types/nunjucks": "^3.2.6",
		"@typescript-eslint/eslint-plugin": "^8.1.0",
		"@typescript-eslint/parser": "^8.1.0",
		"chai": "^5.1.1",
		"esbuild": "^0.23.1",
		"eslint": "^9.9.0",
		"esm": "^3.2.25",
		"globals": "^15.9.0",
		"mocha": "^10.7.3",
		"source-map-support": "^0.5.21",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4"
	},
	"peerDependencies": {
		"nunjucks": "^3.2.4"
	}
}