{
	"compilerOptions": {
		"target": "es2018",
		"module": "esnext",
		"lib": [
			"es2018",
			"dom"
		],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": [
				"types/*"
			]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"useDefineForClassFields": false
	},
	"include": [
		"src/**/*",
		"types/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}