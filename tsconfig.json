{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2018",
        "lib": ["ESNext", "DOM"],
        "outDir": "dist/esm",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}