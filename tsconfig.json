{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2018",
		"lib": [
			"ESNext",
			"DOM"
		],
		"outDir": "dist/esm",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"baseUrl": "src",
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		]
	},
	"include": [
		"src/**/*.ts",
		"types/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}