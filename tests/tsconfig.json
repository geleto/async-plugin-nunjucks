{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"rootDir": "..",
		"types": [
			"node",
			"mocha",
			"../types"
		],
		"baseUrl": "..",
		"paths": {
			"*": [
				"../node_modules/*",
				"../src/*",
				"../types/*"
			]
		}
	},
	"files": [
		"../types/nunjucks-plugin.d.ts",
	],
	"include": [
		"./**/*.ts",
		"../src/**/*.ts",
		"../types/**/*.d.ts"
	],
	"exclude": [
		"../node_modules",
		"../dist"
	]
}