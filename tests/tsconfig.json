{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"rootDir": "..",
		"types": [
			"node",
			"mocha"
		],
		"baseUrl": "..",
		"paths": {
			"*": [
				"node_modules/*",
				"src/*"
			]
		}
	},
	"include": [
		"./**/*.ts",
		"../src/**/*.ts",
		"../types/**/*.d.ts"
	],
	"exclude": [
		"../node_modules",
		"../dist"
	]
}