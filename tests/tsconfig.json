{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"rootDir": "..",
		"types": [
			"node",
			"mocha",
			"../types/nunjucks-plugin"
		],
		"baseUrl": "..",
		"typeRoots": [
			"../types",
			"../node_modules/@types"
		]
	},
	"ts-node": {
		"files": true
	},
	"include": [
		"./**/*.ts",
		"../src/**/*.ts",
		"../types/**/*.d.ts"
	],
	"exclude": [
		"../node_modules",
		"../dist"
	]
}