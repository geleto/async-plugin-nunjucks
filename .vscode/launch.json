{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Mocha Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-r",
				"ts-node/register",
				"tests/**/*.ts",
				"--exclude",
				"node_modules/**/*.spec.js"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				"<node_internals>/**"
			]
		}
	]
}